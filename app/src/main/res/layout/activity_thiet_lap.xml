<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#12b886"
    android:padding="16dp">

    <!-- Header với tiêu đề -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nút Quay lại -->
        <ImageButton
            android:id="@+id/backButtonThietLapMucTieu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#12b886"
            android:contentDescription="Back Icon"
            android:src="@drawable/ic_back"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thiết lập mục tiêu"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Phần Mục tiêu đọc sách -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg1"
        android:padding="16dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mục tiêu đọc sách"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Icon dấu ngoặc kép mở -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_quote" />

            <!-- Text trích dẫn -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không có người bạn nào trung thành như cuốn sách"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="#555555"
                android:textSize="16sp"/>

            <!-- Icon dấu ngoặc kép đóng -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_quote" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_bg">

            <!-- Phần tiêu đề với nút Xong ở bên phải -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- TextView tiêu đề -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Mục tiêu của bạn là"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingLeft="70dp"/>

                <!-- Button Xong -->
                <Button
                    android:id="@+id/btnDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xong"
                    android:textColor="#959597"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Phần hiển thị số phút/ngày với NumberPicker -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Các số kéo lên xuống (NumberPicker) -->
                <NumberPicker
                    android:id="@+id/numberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <!-- TextView "phút/ngày" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="phút/ngày"
                    android:paddingStart="16dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="#009688"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Trạng thái còn bao nhiêu phút để đạt mục tiêu -->
        <TextView
            android:id="@+id/txtMuctieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn còn ... phút nữa để đạt mục tiêu"
            android:textColor="#555555"
            android:layout_gravity="center"
            android:padding="10dp"
            tools:ignore="InvalidId" />

        <!-- Dấu gạch ngang giữa hai phần -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginVertical="8dp"/>

        <!-- Danh sách sách đã đọc -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sách đã đọc trong năm nay"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:paddingBottom="8dp"/>

        <!-- GridLayout hiển thị các ô sách -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="2"
            android:paddingTop="8dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:ignore="SpeakableTextPresentCheck"
                android:background="#38312b">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerViewSachDaDoc"/>

            </androidx.core.widget.NestedScrollView>
        </GridLayout>
    </LinearLayout>
</LinearLayout>