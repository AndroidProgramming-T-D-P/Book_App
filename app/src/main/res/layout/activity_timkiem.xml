<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Nút Quay lại và Tiêu đề "Thông tin tài khoản" -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nút Quay lại -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back Icon" />

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm kiếm"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Lịch sử tìm kiếm với nút xóa -->
    <LinearLayout
        android:id="@+id/historyFind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/headerSection"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lịch sử tìm kiếm"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:contentDescription="Xóa lịch sử"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_delete"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/historyFindhint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/historyFind"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#333"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:text="nhà giả kim"
            android:textColor="#fff"
            android:textSize="14sp"
            android:radius="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#333"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:text="nhà"
            android:textColor="#fff"
            android:textSize="14sp"
            android:radius="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#333"
            android:padding="8dp"
            android:text="tôi tài giỏi bạn cũng thế"
            android:textColor="#fff"
            android:textSize="14sp"
            android:radius="16dp" />
    </LinearLayout>

    <!-- Sách được tìm kiếm nhiều -->
    <TextView
        android:id="@+id/findsach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sách được tìm kiếm nhiều"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/historyFindhint"
        android:layout_marginBottom="8dp" />

    <!-- Danh sách sách -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/findsach"
        android:orientation="vertical">

        <!-- Một item sách -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="#1A1A1A"
            android:radius="8dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/book_review"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên cuốn sách"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên tác giả"
                    android:textColor="#999"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Một item sách -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="#1A1A1A"
            android:radius="8dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/book_review"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên cuốn sách"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên tác giả"
                    android:textColor="#999"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Một item sách -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="#1A1A1A"
            android:radius="8dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/book_review"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên cuốn sách"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên tác giả"
                    android:textColor="#999"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>