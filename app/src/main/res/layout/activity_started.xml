<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userInterface.StartedActivity"
    tools:ignore="MissingClass">

    <!-- Nền Glassmorphism -->


    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/iamge_login"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/glass_background"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/glass_background_login"
        android:elevation="10dp">

        <!-- Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOOK APP"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chúc bạn một ngày tốt lành"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp" />

        <!-- Nút Đăng Nhập -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_goLogin"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_login"
            android:text="ĐĂNG NHẬP"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Nút Đăng Ký -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_goRegister"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@drawable/bg_register"
            android:text="ĐĂNG KÝ"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>


</FrameLayout>